// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserProgress {
  userId String @id @unique
  coins  Int    @default(0)

  referral          String  @unique // own account referral ID
  affiliateReferral String? // referral ID used when creating the account
}

model Payout {
  userId   String @id @unique
  quantity Int // in CENTS
  pix      String
}
